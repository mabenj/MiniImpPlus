
program CALCULATOR
begin
var PI = 3;
var ANSWER = PI;
var X = 9;

while not is X PI begin
  set ANSWER = ANSWER + X;
  set X = X - 1;
end.

if not is ANSWER 42 then begin
  write "This is not the answer: ";
end.
else begin
  write "Answer to life and everything is: ";
end.

write ANSWER;

write "Bonus: here's a double quote \" inside a string literal, did you see it?"

end.
